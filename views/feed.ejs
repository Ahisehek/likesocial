<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="main m-10">
        <a class="bg-blue-500 p-2 rounded-lg text-white" href="/read">go to feed</a>
        <a href="/login" class="bg-red-500 rounded-lg p-2 text-white float-right">logout</a>
       <h1 class="font-bold text-3xl mt-4" >hello, <%= user.name %></h1>
        <p class="font-bold">you can create post</p>
        <form action="/post" method="post">
            <textarea name="content" id="" placeholder="whats on your mind?" class="resize-none outline-none rounded-lg p-2  border border-black w-96 h-20"></textarea>
           <input type="submit" value="create new post" class="bg-blue-500 p-2 block rounded-lg text-white ">
        </form>

        <div class="mt-4">
            <% user.post.reverse().forEach(function(post){ %>

                <h3 class="font-bold">your post</h3>
            <div class="postcontainer border border-black h-24 w-96 rounded-lg">
                <h4 class="text-blue-500 ml-4 font-bold">@ <%= user.name %></h4>
                <p class="ml-4 tracking-tight"> <%= post.content %></p>
            </div>

           <% })  %>
            
        </div>
       

    </div>
    
    

  
    
</body>
</html>